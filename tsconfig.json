{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2018", "dom"],
    "strict": false,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "test/**/*",
    "demo/**/*",
    "custom-typings.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
